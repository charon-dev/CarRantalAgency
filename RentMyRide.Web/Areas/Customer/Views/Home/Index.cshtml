@model RentMyRide.Models.ViewModels.HomeVM


<div class="row  bg-black text-white outOfContainer translate-sm translate-md">

        <div class="col-md-6 col-lg-6 p-4 mb-5">
            <div class="row">
                <div class="col-md-12 mb-3">

                <h1 class="fw-bold text-white" data-aos="zoom-in" data-aos-delay="700" data-aos-once="true">Search, book, and rent vehicules easily</h1>
                    <p data-aos="zoom-in" data-aos-delay="1500" data-aos-once="true">
                        Rent a car just from your fingertip. We provide awesome cars at great prices. Rent a car, any time, anywhere.
                    </p>
                </div>
            <div class="col-md-12 card text-white bg-dark p-3" data-aos="zoom-in" data-aos-delay="2100" data-aos-once="true">
                    <div class="card-header">
                        <h3 class="text-center ">Reserve now</h3>
                    </div>
                    <div class="card-body">
                        <form>
                            <input class="col-12 mb-2" type="text" />
                            <div class="m-auto row ">
                                <input style="transform: translateX(-4px);" class="col-6 mb-2 mx-1" type="text" />
                                <input class="col mb-2" type="text" />
                            </div>

                            <button class="btn btn-info w-100">Search</button>
                        </form>
                    </div>

                </div>
            </div>

        </div>
    <div class="col-md-6 col-lg-6 d-none d-md-block d-lg-block mt-5" data-aos="fade-up" data-aos-delay="2800" data-aos-once="true">
            <img class="w-100" style="transform: translateX(12px);" src="~/images/Home.jfif" />
        </div>
</div>

<div class="my-5"></div>
<div class="row my-5 gx-6 gy-3 SecDiv-sm SecDiv-md">
    <h1 data-aos="fade-down" data-aos-once="true" class="fw-bold text-info mt-5">No hidden extras</h1>
    
    <p data-aos="fade-down" data-aos-once="true">
        With our honourable and transparent pricing policy the price you see is the price you pay -no gimmicks or hidden extras.
    </p>
    <div class="row  d-flex  justify-content-center">
        <div class="card text-white bg-black mb-3 mx-2 col-md-4" data-aos="fade-right" data-aos-delay="700" data-aos-once="true">
            <div class="card-body">
                <h4 class="card-title text-info">Free cancellation</h4>
                <p class="card-text">
                    we know that plans can change, so we offer free
                    cancellation to give you peace of mind when booking your car.
                </p>
            </div>
        </div>

        <div class="card text-white bg-black mb-3 mx-2 col-md-4" data-aos="fade-left" data-aos-delay="1000" data-aos-once="true">
            <div class="card-body">
                <h4 class="card-title text-info">24h Assistance</h4>
                <p class="card-text">
                    For those unexpected times when something goes wrong with the car,
                    we provide 24-hour roadside assistance.
                </p>
            </div>
        </div>
    </div>
    
    <div class="row h-100 d-flex  justify-content-center" data-aos="fade-right" data-aos-once="true" data-aos-delay="1300">
        <div class="card text-white bg-black mb-3 mx-2 col-md-4">
            <div class="card-body">
                <h4 class="card-title text-info">Additional Driver</h4>
                <p class="card-text">
                    Share your luxury hire car with one additional driver at no extra cost,
                    allowing both you and your trip partner to take the wheel.
                </p>
            </div>
        </div>

        <div class="card text-white bg-black mb-3 mx-2 col-md-4" data-aos="fade-left" data-aos-once="true" data-aos-delay="1600">
            <div class="card-body">
                <h4 class="card-title text-info">Comprehensive Insurance</h4>
                <p class="card-text">
                    Rest assured that you're covered by fully comprehensive insurance,
                    which comes as standard with our luxury car hire service.
                </p>
            </div>
        </div>
    </div>
    
</div>

<div class="my-5"></div>
<div class="row outOfContainer bg-black text-white d-flex  justify-content-center text-center p-4 my-5 ThirdDiv-sm ThirdDiv-md">

    <div class="col-md-3 col-sm-12 mb-3">
        <i class="bi bi-people-fill"></i> @Model.UsersCount Happy customers

    </div>

    <div class="col-md-3 col-sm-12 mb-3">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-car-front-fill" viewBox="0 0 16 16">
            <path d="M2.52 3.515A2.5 2.5 0 0 1 4.82 2h6.362c1 0 1.904.596 2.298 1.515l.792 1.848c.075.175.21.319.38.404.5.25.855.715.965 1.262l.335 1.679c.033.161.049.325.049.49v.413c0 .814-.39 1.543-1 1.997V13.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-1.338c-1.292.048-2.745.088-4 .088s-2.708-.04-4-.088V13.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-1.892c-.61-.454-1-1.183-1-1.997v-.413a2.5 2.5 0 0 1 .049-.49l.335-1.68c.11-.546.465-1.012.964-1.261a.807.807 0 0 0 .381-.404l.792-1.848ZM3 10a1 1 0 1 0 0-2 1 1 0 0 0 0 2Zm10 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2ZM6 8a1 1 0 0 0 0 2h4a1 1 0 1 0 0-2H6ZM2.906 5.189a.51.51 0 0 0 .497.731c.91-.073 3.35-.17 4.597-.17 1.247 0 3.688.097 4.597.17a.51.51 0 0 0 .497-.731l-.956-1.913A.5.5 0 0 0 11.691 3H4.309a.5.5 0 0 0-.447.276L2.906 5.19Z" />
        </svg> @Model.CarsCount Cars
    </div>

    <div class="col-md-3 col-sm-12 mb-3">
        <i class="bi bi-check-circle-fill"></i> @Model.RentingCount Renting done 
    </div>
</div>

<div class="my-5"></div>
<div class="row my-5">
    <h1 class="fw-bold text-info mt-5" data-aos="fade-down" data-aos-once="true" data-aos-delay="500">Where to find us</h1>
    <p class="text-center" data-aos="fade-down" data-aos-once="true" data-aos-delay="500">@Model.OpenHours</p>

    <div class="row m-auto d-flex  justify-content-center">
         @foreach(var item in Model.LocationsList)
        {
            <div data-aos="zoom-out-down" data-aos-once="true" data-aos-delay="900" class="col-md-2 column mx-2 card border-info mb-3 p-2">
                <div class="row">
                    <p class="col-12">~ @item.Name</p>
                    <p class="col-12" style="width:200px;height:50px">Adress: @item.Address</p>
                    <p class="col-12">Phone number: @item.PhoneNumber</p>
                </div>

                
            </div>
           
        }
    </div>  
</div>

<div class="my-5"></div>
<div class="row my-5">
    <h1 class="fw-bold text-info mt-5" data-aos="fade-down" data-aos-once="true" data-aos-delay="700">A fleet that meets your needs</h1>
    <p data-aos="fade-down" data-aos-once="true" data-aos-delay="700">
        Take the opportunity to test the new models.
    </p>
    <div class="row m-auto d-flex  justify-content-center">
        @foreach (var car in Model.Cars)
        {
            <div class="col-lg-2 col-md-5 card mx-1 mb-4 CarsDiv-sm CarsDiv-md border-primary" data-aos="fade-down"
             data-aos-easing="linear"
             data-aos-duration="900"
             data-aos-delay="1200">
                <div class="card-body">

                    <img src="@car.img" class="w-100">
                    <p class="fw-bold">@car.Make @car.Model</p>
                    <p><small>@car.PriceByDay MAD/day</small> </p>
                    <div class="">
                        <a class="w-100 btn bg-black text-white">See the offer</a>
                    </div>
                </div>

            </div>
        }
    </div>
</div>

<div class="my-5"></div>
<div class="row mt-5 outOfContainer bg-black text-white d-flex  justify-content-center text-center p-4 FeedbackDiv-md FeedbackDiv-sm">
    <h1 class="fw-bold text-info mt-5">Leave your feedback</h1>
    <div class="p-4">
        <p class="small">
            Leaving feedback on our web application is an essential way to help us improve our service and provide you with a better user experience.
            Your feedback is valuable to us and helps us understand your needs and expectations. By leaving your feedback,
            you are also contributing to our community and helping other users make informed decisions.
            We highly encourage you to share your thoughts and suggestions, whether positive or negative,
            as we take all feedback seriously and use it to improve our product.
            Your feedback is essential to our success, and we appreciate your time and effort in providing it.
        </p>
    </div>

    <div>
        <form method="post" asp-action="Index" enctype="multipart/form-data">
            <input asp-for="Feedback.Id" hidden />
                <div class="row mb-5 d-flex  justify-content-center">
                    <div class="mb-3 col-6 ">
                        <textarea asp-for="Feedback.Comment" class="form-control"></textarea>
                        <span asp-validation-for="Feedback.Comment" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Feedback.ApplicationUserId" />

                    <div class="col-12">
                        <button data-aos="flip-left"
                                data-aos-easing="ease-out-cubic"
                                data-aos-duration="2000"
                                data-aos-delay="700" type="submit" onclick="return ValidateInput()" class="btn btn-primary" style="width:150px">
                            Just leave it
                        </button>
                    </div>
                </div>
        </form>
    </div>
    
</div>


@section Scripts{
<script>
    AOS.init();
</script>
}