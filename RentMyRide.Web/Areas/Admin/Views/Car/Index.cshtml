<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cars List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Car" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create Car
            </a>
        </div>
    </div>
    <br /> <br />

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Make
                </th>
                <th>
                    Model
                </th>
                <th>
                    Year
                </th>
                <th>
                    Color
                </th>
                <th>
                    License plate number
                </th>
                <th>
                    Current mileage
                </th>
                <th>
                    Price by day
                </th>
                <th>
                    Places
                </th>
                <th>
                    Location
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

