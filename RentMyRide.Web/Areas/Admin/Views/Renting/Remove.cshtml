@model Renting_Services

<form method="post" asp-action="Remove">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete renting service</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="AdditionalService.Name"></label>
            <input asp-for="AdditionalService.Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="AdditionalService.Price"></label>
            <input asp-for="AdditionalService.Price" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Remove</button>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

